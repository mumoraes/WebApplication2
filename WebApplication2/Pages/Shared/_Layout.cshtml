<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Games' World!</title>


    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <link href="~/css/style.css" type="text/css" rel="stylesheet" />
    <link src="~/images/logo.gif">

</head>
<body>
    <section>
        <article>
            <header>
                <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a asp-page="/Index" class="nav-link">Home</a>
                            </li>
                            <li class="nav-item">
                                <a asp-page="/About" class="nav-link">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a asp-page="/Contact" class="nav-link">Contact</a>
                            </li>
                        </ul>
                    </div>
                    <div class="mx-auto order-0">
                        <a class="navbar-brand mx-auto" href="Index">Games' World!</a>
                    </div>
                    <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a href="../Games">
                                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Get Started</button>
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>

            <partial name="_CookieConsentPartial" />

            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; 2020 - Games' World!</p>
                </footer>
            </div>

            @RenderSection("Scripts", required: false)
        </article>
    </section>

</body>
</html>
