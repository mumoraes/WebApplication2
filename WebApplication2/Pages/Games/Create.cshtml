@page
@model WebApplication2.Pages.Games.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create New Game</h2>

<hr />
<section>
    <article>
        <div>
            <div class="container-fluid">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Game.Title" class="control-label"></label>
                        <input asp-for="Game.Title" class="form-control" />
                        <span asp-validation-for="Game.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Game.PublicationYear" class="control-label"></label>
                        <input asp-for="Game.PublicationYear" class="form-control" />
                        <span asp-validation-for="Game.PublicationYear" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Game.MinimumPlayers" class="control-label"></label>
                        <input asp-for="Game.MinimumPlayers" class="form-control" />
                        <span asp-validation-for="Game.MinimumPlayers" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Game.MaximumPlayers" class="control-label"></label>
                        <input asp-for="Game.MaximumPlayers" class="form-control" />
                        <span asp-validation-for="Game.MaximumPlayers" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-primary" />
                    </div>
                </form>
            </div>
        </div>
    </article>
</section>
<div>
    <a class="btn btn-dark" asp-page="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
